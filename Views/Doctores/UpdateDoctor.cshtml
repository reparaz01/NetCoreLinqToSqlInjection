@model Doctor

<h1>New Doctor</h1>

<p>

    <a asp-controller="Doctores"
       asp-action="Index">

        Back to Index

    </a>
</p>



<form method="post">

    <label>Id Doctor</label>
    <input type="number" class="form-control"
           name="iddoctor" />
    <label>Apellido</label>
    <input type="text" name="apellido" class="form-control" value="@Model.Apellido  />
    <label>Especialidad</label>
    <input type="text" name="especialidad" class="form-control" value="@Model.IdHospital />
    <label>Salario</label>
    <input type="number" name="salario" class="form-control" value="@Model.Especialidad  />
    <label>Id Hospital</label>
    <input type="number" name="idhospital" class="form-control" value="@Model.Salario  />
    <button class="btn btn-info">

        Create Doctor

    </button>

</form> 

